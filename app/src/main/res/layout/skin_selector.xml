<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mario_background_menu">

    <ImageButton
        android:id="@+id/koopaButton"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/flying_koopa"
        app:layout_constraintEnd_toStartOf="@+id/marioButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flying_koopa" />

    <ImageButton
        android:id="@+id/marioButton"
        android:layout_width="150dp"
        android:layout_height="230dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/koopaButton"
        android:layout_marginEnd="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/flying_mario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/koopaButton"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/flying_mario" />
</RelativeLayout>