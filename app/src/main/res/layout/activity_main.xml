<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mario_background_menu"
    tools:context="edu.niu.cs.z1756423.csci428finalproject.MainActivity">

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:paddingLeft="32dp"
        android:src="@drawable/playbtn" />

    <ImageButton
        android:id="@+id/skinButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/playButton"
        android:background="@android:color/transparent"
        android:paddingRight="32dp"
        android:src="@drawable/skinbtn" />

    <ImageView
        android:id="@+id/titleImageVIew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/flappy_koopa_title" />

    <TextView
        android:id="@+id/highScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/titleImageVIew"
        android:layout_alignTop="@+id/playButton"
        android:layout_marginStart="60dp"
        android:layout_marginTop="120dp"
        android:text="High Score:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/actualScoreTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/highScoreTV"
        android:layout_below="@+id/titleImageVIew"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/highScoreTV"
        android:layout_marginEnd="40dp"
        android:text="0"
        android:textSize="30sp" />

</RelativeLayout>
